{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "compile",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceRoot}\\out\\${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}